<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        android:theme="@style/Theme.MaterialComponents"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        tools:context=".fragments.FazerFragment">

    <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="114dp"
            android:background="#ECECEC"
            android:id="@+id/rvListaFazer"
            android:layout_height="617dp"
            android:layout_width="match_parent"
            tools:listitem="@layout/item_tarefas_fazer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/btnAdicionar"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="500dp"
            android:layout_marginEnd="40dp"
            android:layout_gravity="end"
            android:text="Adicionar"
            android:textColor="#FFFFFF"
            app:iconTint="#FFFFFF"
            app:iconSize="18dp"
            android:backgroundTint="@color/colorBotao"
            app:icon="@drawable/ic_adicionar"/>

    <ImageView
            android:id="@+id/imgFazerVazia"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="220dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_visionary"/>
    <TextView
            android:id="@+id/txtFazerVazia"
            android:layout_gravity="center_horizontal"
            android:textSize="18dp"
            android:layout_marginTop="370dp"
            android:textColor="@color/colorTitulo"
            android:text="Opa...não há nada aqui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/txt2FazerVazia"
            android:layout_gravity="center_horizontal"
            android:textSize="14dp"
            android:layout_marginTop="395dp"
            android:textColor="@color/colorTitulo"
            android:text="Que tal adicionar alguma tarefa na sua lista?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

